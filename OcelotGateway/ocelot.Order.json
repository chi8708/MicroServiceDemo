 {
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/orders",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        },
        {
          "Host": "localhost",
          "Port": 7002
        }
      ],
      "UpstreamPathTemplate": "/api/orders",
      "UpstreamHttpMethod": [ "Get" ],
      "Key": "Orders",
      //"RateLimitOptions": {//限流
      //  "ClientWhitelist": [],
      //  "EnableRateLimiting": true,
      //  "Period": "1m",
      //  "PeriodTimespan": 60,
      //  "Limit": 1
      //}
      "FileCacheOptions": {//缓存
        "TtlSeconds": 60,//60秒从用户停止交互后开始算秒数，是相对时间 不是绝对时间
        "Region": "orders"
      },
      "LoadBalancerOptions": {//负载均衡
        "Type": "RoundRobin"
      }
    },
    {
      "DownstreamPathTemplate": "/api/orders/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "UpstreamPathTemplate": "/api/orders/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "QoSOptions": { //熔断
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 5000,
        "TimeoutValue": 2000
      }
    },
    {
      "DownstreamPathTemplate": "/api/shoppingCarts",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "DownstreamHeaderTransform": {
        "devops": "rdc"//response 
      },
      "UpstreamPathTemplate": "/api/shoppingCarts",
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamHeaderTransform": {//request 替换
        "lakin": "rdc",
        "CI": "msbuild, jenkins",
        "Location": "http://localhost:7001, {BaseUrl}"
      }
    }
    //{
    //  "DownstreamPathTemplate": "/api/products",
    //  "DownstreamScheme": "http",
    //  "DownstreamHostAndPorts": [
    //    {
    //      "Host": "localhost",
    //      "Port": 7002
    //    }
    //  ],
    //  "UpstreamPathTemplate": "/api/products",
    //  "UpstreamHttpMethod": [ "Get" ],
    //  "Key": "Products"
    //}
  ],
  //请求聚合, 当访问http://localhost:5000/api/aggregates， 会同时返回订单数据和产品数据 不支持Post
  "Aggregates": [
    {
      "RouteKeys": [
        "Orders",
        "Products"
      ],
      "UpstreamPathTemplate": "/api/aggregates",
      "UpstreamHttpMethod": [ "Get","Post" ]
    }
  ],
